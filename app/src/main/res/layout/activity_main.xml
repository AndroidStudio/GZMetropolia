<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:id="@+id/knoxButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KNOX"
            tools:ignore="HardcodedText"/>

    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonLayout"
            android:layout_marginBottom="40dp"
            android:width="318dp"
            android:height="50dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.32"
            android:text="Co chcesz zrobić?"
            android:textColor="#000"
            android:textSize="38dp"/>

    <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

        <Button
                android:id="@+id/audioButton"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_margin="10dp"
                android:background="@color/color_01"
                android:drawableTop="@drawable/ic_music_note"
                android:paddingLeft="20dp"
                android:paddingTop="70dp"
                android:paddingRight="20dp"
                android:text="Słuchaj\nmuzyki"
                android:textColor="#fff"
                android:textSize="14dp"
                tools:ignore="ButtonStyle,HardcodedText"/>

        <Button
                android:id="@+id/videoButton"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_margin="10dp"
                android:background="@color/color_02"
                android:drawableTop="@drawable/ic_movies"
                android:paddingLeft="20dp"
                android:paddingTop="70dp"
                android:paddingRight="20dp"
                android:text="Oglądaj\nfilmy"
                android:textColor="#fff"
                android:textSize="14dp"
                tools:ignore="ButtonStyle,HardcodedText"/>

        <Button
                android:id="@+id/galleryButton"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_margin="10dp"
                android:background="@color/color_03"
                android:drawableTop="@drawable/ic_picture"
                android:paddingLeft="20dp"
                android:paddingTop="70dp"
                android:paddingRight="20dp"
                android:text="Przeglądaj\nzdjęcia"
                android:textColor="#fff"
                android:textSize="14dp"
                tools:ignore="ButtonStyle,HardcodedText"/>
    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF7F7F7">

        <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:src="@drawable/ic_gzm_sygnet_"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/logo"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/logoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Górnośląsko\n-Zagłębiowska\nMetropolia"
                    android:textColor="#FFD7006D"
                    android:textSize="18dp"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>